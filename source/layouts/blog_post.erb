<% set_meta_tags title: current_article.title %>
<% set_meta_tags description: current_article.data.description %>
<% set_meta_tags keywords: current_article.data.tags %>

<% wrap_layout :layout do %>
  <article class="post">
    <div class="post__banner" style="background-color: <%= data['categories'][current_article.data.category]['color'] %>">
      <div class="post__avatar">
        <img src="<%= data['authors'][current_article.data.author]['avatar'] %>" width="60" height="60">
      </div>
    </div>
    <div class="post__details">
      <div class="post__category" style="color: <%= data['categories'][current_article.data.category]['color'] %>"><%= current_article.data.category %></div>
      <h1><%= current_article.title %></h1>
      <div class="post__meta">
        by <span class="author"><%= data['authors'][current_article.data.author]['name'] %></span>
        <b>â€¢</b>
        <time><%= current_article.date.strftime('%b %e, %Y') %></time>
      </div>
    </div>
    <div class="post__entry">
      <%= yield %>
    </div>
  </article>
  <div id="disqus_thread"></div>
  <script type="text/javascript">
    var disqus_shortname = 'taxjar';
    var disqus_container_id = 'disqus_thread';
    var disqus_identifier = "<%= current_article.slug %>";
    var disqus_title = "<%= current_article.title %>";
    var disqus_url = "http://developers.taxjar.com<%= current_article.url %>";
    (function() {
        var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
        dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
        (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
    })();
  </script>
<% end %>